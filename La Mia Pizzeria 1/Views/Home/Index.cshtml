@{Layout=null;}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <title>Pizzeria San Giovanni</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Pizzeria San Giovanni</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-6">
        <h1>Menu</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Le nostre pizze</th>
                    <th scope="col">Prezzo</th>
                    <th scope="col">Ingredienti</th>
                    <th scope="col">Presentazione</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Margherita</td>
                    <td>$6.50</td>
                    <td>Salsa di pomodoro, mozzarella, basilico fresco</td>
                    <td><img src="~/css/img/PizzaMargherita.jpg" alt="Pizza Margherita" width="100"></td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Diavola</td>
                    <td>$8.00</td>
                    <td>Salsa di pomodoro, mozzarella, salame piccante</td>
                    <td><img src="~/css/img/PizzaDiavola.jpg" alt="Pizza Diavola" width="100"></td>
                </tr>

                <tr>
                    <th scope="row">3</th>
                    <td>Prosciutto e funghi</td>
                    <td>$8.50</td>
                    <td>Salsa di pomodoro, mozzarella, prosciutto cotto, funhi di stagione</td>
                    <td><img src="~/css/img/PizzaProsciuttoEFunghi.jpg" alt="Pizza Prosciutto e funghi" width="100"></td>
                </tr>

                <tr>
                    <th scope="row">4</th>
                    <td>Marinara</td>
                    <td>$5.00</td>
                    <td>Salsa di pomodoro fresco, origano, olio extravergine d'oliva</td>
                    <td><img src="~/css/img/PizzaMarinara.jpg" alt="Pizza Marinara" width="100"></td>
                </tr>

                <tr>
                    <th scope="row">5</th>
                    <td>Stracciatella e speck</td>
                    <td>$9.00</td>
                    <td>Salsa di pomodoro, straciatella di burrata, speck trentino</td>
                    <td><img src="~/css/img/PizzaStraciatellaESpeck.jpg" alt="Pizza Straciatella e speck" width="100"></td>
                </tr>

                <tr>
                    <th scope="row">6</th>
                    <td>Bufalina</td>
                    <td>$10.00</td>
                    <td>Salsa di pomodoro, mozzarella di bufala campana, basilico fresco, olio extravergine d'oliva</td>
                    <td><img src="~/css/img/PizzaBufalina.jpg" alt="Pizza Bufalina" width="100"></td>
                </tr>
        </table>
    </div>
</body>
</html>
